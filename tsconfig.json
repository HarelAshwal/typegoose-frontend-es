{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "outDir": "lib",
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}